<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>To Do List</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>To-Do List:</h1>
  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) {%>
    <li class="message">
      <span class='<%= messages[i].completed ? "strike" : "" %>'><%= messages[i].msg %></span>
      <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul> 

  <h2>Enter Task Here:</h2>

  <form action="/messages" method="POST">
    <!-- <input type="text" placeholder="name" name="name"> -->
    <input type="text" placeholder="Task" name="msg" id="tasks">
    <button type="submit">Submit</button>
  </form>
  <p>delete entire list here:</p>
      <span><i class="delete fa fa-trash" aria-hidden="true"></i></span>
   
  

  <script src="main.js"></script>

</body>
</html>
